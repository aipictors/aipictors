{
  "terminal.integrated.env.windows": {
    "PSExecutionPolicyPreference": "RemoteSigned"
  },
  "cSpell.words": [
    "adsbygoogle",
    "adsense",
    "aipictors",
    "codegen",
    "denoising",
    "favorited",
    "followee",
    "followees",
    "immer",
    "lucide",
    "menlo",
    "nextjs",
    "noto",
    "ourt",
    "pixelify",
    "prompton",
    "scta",
    "shadcn",
    "sonner",
    "usehooks",
    "xstate"
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "always"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "files.associations": {
    "*.svg": "html",
    "*.xml": "html",
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/node_modules": true,
    "*.lock": true,
    "*.log": true,
    "*.tsbuildinfo": true,
    ".firebase": true,
    ".idea": true,
    ".next": true,
    ".sentryclirc": true,
    ".yarn": true,
    "build-storybook.log": true,
    "dist": true,
    "graphql/__generated__": true,
    "next-env.d.ts": true,
    "package-lock.json": true,
    "pnpm-lock.yaml": true,
    "bun.lockb": true
  },
  "search.exclude": {
    "*.lock": true,
    "package-lock.json": true,
    "public": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.autoImportFileExcludePatterns": [
    "@emotion",
    "@radix-ui",
    "next/dist",
    "postcss",
    "process",
    "react-day-picker",
    "tailwind-merge",
    "tailwindcss"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative"
}
