{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "formatter": {
    "include": ["**/*.{ts,tsx,json,html,graphql}"],
    "indentStyle": "space"
  },
  "linter": {
    "include": ["app/*.{ts,tsx}"],
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "nursery": {
        "noUnusedImports": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignore": [
      ".next",
      "node_modules",
      "@/__generated__",
      "storybook-static",
      "public",
      "**/*.{yml,yaml,mdx,md,svg,ico}"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main"
  }
}
