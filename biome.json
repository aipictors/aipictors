{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "**/*.{yml,yaml,mdx,md,svg,ico}",
      "**/__generated__/**",
      ".next/**",
      "node_modules/**",
      "public/**",
      "storybook-static/**"
    ]
  },
  "linter": {
    "include": ["**/*.{ts,tsx,json,html,graphql}"],
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "nursery": {
        "noUnusedImports": "error"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "include": ["**/*.{ts,tsx,json,html,graphql}"],
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": false
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
